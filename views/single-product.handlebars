{{> nav}}

<div class="container">
    <!-- top-bar -->
    <div class="top-bar">
        <h1>{{ product.productName }}</h1>
        <p><a href="/">Home</a> / <a href="/merch">merch</a> / {{ product.productName }}</p>
    </div>
    <!-- end top-bar -->

    <!-- product snipet start -->
    <div class="container-fluid mt-2 mb-3">
        <div class="row ">
            <div class="col-md-7 pr-2">
                <div class="card">
                    <div class="demo">
                        <ul id="lightSlider">

                            {{#each product.imageRoutes}}
                            <li data-thumb={{ this }}> <img class="img-responsive" src={{ this }} /> </li>
                            {{/each}}

                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-md-5">
                <div class="card">
                    <div class="d-flex flex-row align-items-center">
                        <div class="about">
                            <h3 class="text-uppercase">{{ product.productName }}</h3>
                            <h5>{{ product.productQuote }}</h5>
                            <h3 class="text-uppercase">$ {{ product.price }}.00</h3>
                            <div class="h-30"></div>
                        </div>
                        <button type="button" class="btn btn-outline-secondary btn-lg">Add to Cart</button>
                        <button type="button" class="btn btn-success btn-lg">Buy it Now</button>

                        <hr>
                        <div class="product-description">

                            <div class="d-flex flex-row align-items-center"> <i class="fa fa-calendar-check-o"></i>
                                <span class="ml-1">Delivery from sweden, 15-45 days</span>
                            </div>
                            <div class="mt-2"> <span class="font-weight-bold">Description</span>
                                <p>{{ product.productDescription }}
                                </p>
                                <div class="bullets">
                                    <ul class="cat-ul">
                                        <li><i class="ion-ios-circle-filled"></i> Design</li>
                                        <li><i class="ion-ios-circle-filled"></i> consectetur adipiscing</li>
                                        <li><i class="ion-ios-circle-filled"></i> et gubernationis</li>
                                        <li><i class="ion-ios-circle-filled"></i> Aliter enim nosmet</li>
                                    </ul>
                                    <div class="h-10"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- product snippet end -->
                </div>
            </div>
        </div>
    </div>
</div>

<script src='https://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js'></script>
<script src='https://sachinchoolur.github.io/lightslider/dist/js/lightslider.js'></script>
<script>
    $('#lightSlider').lightSlider({
        gallery: true,
        autoWidth: false,
        item: 1,
        loop: true,
        slideMargin: 0,
        thumbItem: 6
    });
</script>
